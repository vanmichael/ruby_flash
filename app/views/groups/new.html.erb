<div class="large-7 large-centered columns">
	<div id="accordion">
		<h3 class="top_tab_title">Add Group</h3>
		<div class="group-accordion hide_on_load">
			<%= simple_form_for @group do |f| %>
			<%= f.input :name, label: 'Group Name' %>
			<%= f.button :submit, label: 'Create Group' %>
			<% end %>
	  </div>
	  <h3 class="tab_title">Search Groups</h3>
	  <div class="group-accordion hide_on_load">
        <%= form_tag groups_path, method: 'get', id: "groups_search" do %>
        <%= hidden_field_tag :direction, params[:direction] %>
        <%= hidden_field_tag :sort, params[:sort] %>
          <p>
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag "Search", name: nil, class: "button" %>
          </p>
        <% end %>
      </div>
  	<% @groups.each do |group| %>
	  	<h3 class="tab_title"><%= group.name %></h3>
	  	<div class="group-accordion hide_on_load">
		    <table class="group-counter">
		    	<tr>
		    		<th>
		   				Cards: <%= group.cards.count %>
		   			</th>
		   			<th>
		   				Members: <%= group.users.count %>
		   			</th>
		   			<th>
		   				<%= link_to 'Study', group %>
		   			</th>
		   		</tr>
		    </table>
	  	</div>
  	<% end %>
	</div>
</div>
