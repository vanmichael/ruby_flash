<% @group.cards.each do |c| %>
<div id="card" class="card">
    <div class="front side">
        <h5 class="card_title">Title: <%= c.title %></h5>
        <h4 class="card_question">Question: <%= c.question %></h4>
    </div>
    <div class="back side">
        <h4 class="card_answer">Answer: <%= c.answer %></h4>
        <h5>Topics: <%= raw c.topics.map(&:name).map { |t| link_to t, topic_path(t) }.join(', ') %></h5>
        <h5><%= link_to "Edit Card", edit_card_path(c) %></h5>
    </div>
</div>
<% end %>
