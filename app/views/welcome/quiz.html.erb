<div class="row">
  <div class="tweleve colums text-center">
  <h4>Quiz Mobile</h4>
</div>

<div class="large-6 large-centered columns">
  <ul class="example-orbit" data-orbit>
    <% @cards.each do |card| %>
      <li>
        <div class="card_slider">
          <div id="card" class="card">
          <div class="front side">
              <h5 class="text-center">Title: <%= card.title %></h5>
              <h3 class="text-center">Question: <%= card.question %></3>
          </div>
          <div class="back side">
              <h3 class="text-center">Answer: <%= card.answer %></h3>
              <h5 class="text-center">Topics: <%= raw card.topics.map(&:name).map { |t| link_to t, topic_path(t) }.join(', ') %></h5>
          </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>

