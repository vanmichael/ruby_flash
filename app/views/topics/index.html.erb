<div class="row">
  <div class="large-12 large-centered columns">
    <div id="accordion">
      <h3 class="top_tab_title">Topics</h3>
      <div class="group-accordion hide_on_load">
        <%= form_tag topics_path, method: 'get', id: "topics_search" do %>
        <%= hidden_field_tag :direction, params[:direction] %>
        <%= hidden_field_tag :sort, params[:sort] %>
          <p>
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag "Search", name: nil, class: "button" %>
          </p>
        <% end %>
      </div>
      <% @topics.each do |topic| %>
        <h3 class="tab_title"><%= topic.name %></h3>
        <div class="group-accordion hide_on_load">
          <table class="group-counter">
            <tr>
              <th>
                Cards: <%= topic.cards.count %>
              </th>
              <th>
                <%= link_to topic.name, topic_path(topic) %>
              </th>
            </tr>
          </table>
        </div>
      <% end %>
    </div>
</div>
